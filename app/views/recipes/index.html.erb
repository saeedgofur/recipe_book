<%= form_tag search_recipes_path do %>

<input class="searchbar" name="query" placeholder="Search For Recipes" type="text" autocomplete="off">

<%end%>

<h1>All of your recipes</h1>

<% @posts = @recipes.paginate(:page => params[:page]) %>

<% @posts.each do |x| %>
	<div class="index-1">
		<h2><%= x.title %></h2>
		<div id='recipe-<%= x.id %>'>
		</div>
		<%= button_to 'See Instructions', recipe_show_path(x.id), remote: true, method: :get %>
	</div>
<% end %>

<%= will_paginate @posts, :page_links => true %>