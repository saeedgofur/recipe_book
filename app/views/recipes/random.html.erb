<% request = RestClient.get("http://food2fork.com/api/get?key=#{ENV['F2F_API_KEY']}&rId=#{rand(1000..9999)}") %>



<h1><%= JSON.parse(request.body)["recipe"]["title"].html_safe %></h1>




<a class="recipe-link" target="_blank" href="<%= JSON.parse(request.body)["recipe"]["source_url"] %>"><h3>See Full Recipe </h3></a>
